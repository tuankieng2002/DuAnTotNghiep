<head>
    <link rel="stylesheet" type="text/css" href="/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" type="text/css" href="/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="/images/favicon.ico" />
</head>
<div class="container-scroller">
    {{> navbar}}
    <div class="container-fluid page-body-wrapper">
        {{> sidebar}}
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="page-header">
                    <h3 class="page-title">
                        <span class="page-title-icon bg-gradient-info text-white me-2">
                            <i class="mdi mdi-tooltip-edit"></i>
                        </span> Chỉnh sửa loại
                    </h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/list-category">Danh sách</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Loại sản phẩm</li>
                        </ol>
                    </nav>
                </div>
                <div class="row">
                    <div class="col-md-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Loại sản phẩm</h4>
                                <br />
                                <form class="forms-sample" method="post" action="/category/{{category._id}}/edit"
                                    enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label for="exampleInputUsername1">Tên loại</label>
                                        <input type="text" class="form-control" name="name" value="{{category.name}}">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Thông tin loại</label>
                                        <input type="text" class="form-control" name="description" value="{{category.description}}">
                                    </div>
                                    <div class="form-group">
                                        <label>File upload</label>
                                        <input type="file" class="form-control" onchange="onChangeFile();"
                                            id="image-file" name="image"/>
                                        <img id="image-view" src="{{category.image}}"
                                            style="margin-top: 10px; width: 250px; height: 100px; display: block; object-fit: contain;"
                                            class="form-control">
                                    </div>
                                    <button type="submit" id="submit" class="btn btn-gradient-primary me-2">Chỉnh sửa</button>
                                    <button class="btn btn-light">Hủy</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- plugins:js -->

<script>
  const onChangeFile = () => {
    const file = document.getElementById('image-file').files[0];
    const reader = new FileReader();
    reader.onload = e => {
      document.getElementById('image-view').src = e.target.result;
      document.getElementById('image-view').style.display = 'block';
    }
    reader.readAsDataURL(file);
  }
</script>