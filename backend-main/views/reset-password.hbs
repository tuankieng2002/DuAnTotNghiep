<head>
  <link rel="stylesheet" type="text/css"
    href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
  <!-- Main css -->
  <link rel="stylesheet" type="text/css" href="/css/login.css">
</head>
<div class="main">
  <!-- Sing in  Form -->
  <section class="sign-in">
    <div class="container">
      <div class="signin-content">
        <div class="signin-form">
          <h2 class="form-title">Reset Password</h2>
          {{#if success}}
          <input type="hidden" id="successful" value="{{success}}" />
          {{/if}}
          {{#if error}}
          <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          <form id="form" method="POST" class="register-form" action="/reset-password/{{email}}/">
            <div class="form-group">
              <label><i class="fa fa-barcode"></i></label>
              <input type="number" placeholder="Your OTP" name="OTP" required/>
            </div>
            <div class="form-group">
              <label><i class="fa fa-lock"></i></label>
              <input type="password" placeholder="Mật khẩu mới" name="passwordNew" required/>
            </div>
            <div class="form-group">
              <label><i class="fa fa-lock"></i></label>
              <input type="password" placeholder="Nhập lại mật khẩu" name="passwordChange" required/>
            </div>
            <div class="form-group form-button">
              <input type="submit" class="form-submit" />
            </div>
          </form>
        </div>
        <div class="signin-image">
          <figure><img src="/images/resetpass2.webp" alt="sing up image"></figure>
        </div>
      </div>
    </div>
  </section>

</div>

<script>
  window.onload = function () {
    var successful = document.getElementById("successful").value;
    if (successful) {
      Swal.fire({
        title: 'Thành công',
        icon: 'success',
        confirmButtonText: 'Login'
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = `/login`
        }
      })
    }
  }
</script>