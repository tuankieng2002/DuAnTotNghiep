<head>
  <link rel="stylesheet" type="text/css"
    href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
  <!-- Main css -->
  <link rel="stylesheet" type="text/css" href="/css/login.css">
</head>
<div class="main">
  <!-- Sing in  Form -->
  <section class="sign-in">
    <div class="container">
      <div class="signin-content">
        <div class="signin-form">
          <h2 class="form-title">Forgot Password</h2>
          {{#if error}}
          <input type="hidden" id="error" value="{{error}}" />
          {{/if}}
          <form id="form" method="POST" class="register-form" action="/send">
            <div class="form-group">
              <label><i class="fa fa-envelope"></i></label>
              <input type="email" name="email" placeholder="Your Email" required/>
            </div>
            <div class="form-group form-button">
              <input type="submit" class="form-submit" />
            </div>
          </form>
        </div>
        <div class="signin-image">
          <figure><img src="/images/resetpass.webp" alt="sing up image"></figure>
        </div>
      </div>
    </div>
  </section>

</div>

<script>
  window.onload = function () {
    var error = document.getElementById("error").value;
    if (error) {
      Swal.fire({
        icon: 'error',
        text: 'Không tìm thấy email này!',
      })
    }
  }
</script>